<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="15" >

    <TextView
        android:id="@+id/tv0"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:gravity="left"
        android:text="HELP US SERVE YOU BETTER"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textFontWeight="20"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:gravity="left"
        android:text="CAR IS NOT CLEAN" />
    <RadioGroup
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:gravity="center"
            android:text="YES" />

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:gravity="center"
            android:text="NO" />

    </RadioGroup>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_row="2"
        android:layout_column="0"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:gravity="left"
        android:text="Driver Was Rude" />
    <RadioGroup
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:gravity="center"
            android:text="YES" />

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:gravity="center"
            android:text="NO" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:layout_row="3"
        android:layout_column="0"
        android:gravity="left"
        android:text="Charges Were High" />
    <RadioGroup
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:gravity="center"
            android:text="YES" />

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:gravity="center"
            android:text="NO" />
    </RadioGroup>


    <TextView
        android:id="@+id/tv4"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_row="4"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:layout_column="0"
        android:gravity="left"
        android:text="Car Did Not Arrive on Time" />
    <RadioGroup
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:gravity="center"
            android:text="YES" />

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:gravity="center"
            android:text="NO" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="301dp"
        android:layout_height="60dp"
        android:layout_row="5"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:gravity="bottom"
        android:textSize="16dp"
        android:text="Reason Not Listed? Please Enter Below"
        android:textFontWeight="20" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="395dp"
        android:layout_height="168dp"
        android:layout_row="10"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:textAlignment="gravity"
        android:background="@drawable/margine_border"
        android:textColor="#000000"
        android:textStyle="bold"
        android:ems="20"
        android:maxLength="100"
        android:maxLines="4"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/submit"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_row="12"
        android:layout_column="0"
        android:layout_gravity="center"
        android:onClick="submit"
        android:text="SUBMIT"
        android:textAlignment="center"
        android:textColor="#000000" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_row="12"
        android:layout_column="1"
        android:layout_gravity="center"

        android:onClick="cancel"
        android:text="CANCEL"
        android:textAlignment="center"
        android:textColor="#000000" />
</GridLayout>